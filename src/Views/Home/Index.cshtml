<link href="@Url.Content("~/css/signup-and-registration.css")" rel="stylesheet" type="text/css" />
<div class="row g-0">
    <div class="col-sm-0 col-m-8">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid col-7">
                <a class="navbar-brand">@ViewBag.Tokens</a>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a asp-page="/Index" class="nav-link">Home</a></li>
                        @*<li class="nav-item"><a asp-page="/Auth/Index" class="nav-link">Auth</a></li>
                        <li class="nav-item"><a asp-page="/Game/Index" class="nav-link">Game</a></li>
                        <li class="nav-item"><a asp-page="/Game/Index" class="nav-link">Game</a></li>*@
