@model IYLTDSU.WebApp.Models.Lobby.SidebarViewModel
@{
}
<div class="sidebar-current-user">
    <img class="sidebar-current-user-image" src="images/@Model.CurrentUser.ImageUrl" alt="@Model.CurrentUser.UserName" />
    <span>
        @Model.CurrentUser.UserName <br />
        @Model.CurrentUser.UserStatus
    </span>
</div>
<div class="sidebar-current-user-party-header">
    <div class="d-flex">
        <span class="material-icons">
            group
        </span>
        Open party
    </div>
    <div class="form-check form-switch form-switch-sm">
        <input class="form-check-input" type="checkbox" id="openParty" checked="checked" role="switch">
    </div>
</div>
<div class="sidebar-current-user-party-size">
    @{
        for (var i = 0; i < Model.PartySettings.SpotsLeft; i++)
        {
            <span class="material-icons">
                person
            </span>
        }
    }
</div>
<div class="sidebar-friends-list-header">
    <span>Social</span>
    <div class="sidebar-friends-list-header-controls">
        <span class="material-icons">person_add</span>
        <span class="material-icons">list</span>
        <span class="material-icons">search</span>
    </div>
</div>
<div class="sidebar-friends-list">
    <span>Online (@Model.Friends.Count(x => x.IsLoggedIn))</span>
    @foreach (var friend in Model.Friends.Where(x => x.IsLoggedIn))
    {
        <div class="sidebar-current-user">
            <img class="sidebar-current-user-image" src="images/@friend.ImageUrl" alt="@friend.UserName" />
            <span>
                @friend.UserName <br />
                @friend.UserStatus
            </span>
        </div>
    }
    <span>Offline (@Model.Friends.Count(x => !x.IsLoggedIn))</span>
    @foreach (var friend in Model.Friends.Where(x=> !x.IsLoggedIn))
    {
        <div class="sidebar-current-user">
            <img class="sidebar-current-user-image" src="images/@friend.ImageUrl" alt="@friend.UserName" />
            <span>
                @friend.UserName <br />
                @friend.UserStatus
            </span>
        </div>
    }
</div>
<div class="sidebar-bottom-bar">
    <span>Version:</span>
    <span>
        0.0.1
    </span>
</div>